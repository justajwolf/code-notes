{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": false,
        "noUnusedLocals": false,
        "importHelpers": true,
        "removeComments": false,
        "noLib": false,
        "downlevelIteration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ESNext",
        "sourceMap": false,
        "allowJs": false,
        "strict": true,
        "strictNullChecks": false
    },
    "exclude": [
        "../node_modules",
        "./**/*.spec.ts"
    ]
}